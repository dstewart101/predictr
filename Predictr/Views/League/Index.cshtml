@model Predictr.ViewModels.VM_League

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Scores
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PlayerScores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPoints)
                </td>
                
            </tr>
        }
    </tbody>
</table>
