@model Predictr.ViewModels.VM_MyPredictr

@{
    ViewData["Title"] = "Index";
}

<h2>My Predictions</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Group
            </th>
            <th>
                Date/Time
            </th>
            <th>
                Home
            </th>
            <th>
                H.Score
            </th>

            <th>
                A.Score
            </th>
            <th>
                Away
            </th>
            <th>
                Result
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Predictions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FixtureDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Home)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeScore)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AwayTeamScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Away)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>

                <td>
                    <a asp-area="" asp-controller="Prediction" asp-action="Create" asp-route-id="@item.Id">Make Prediction</a>
                </td>
            </tr>
        }
    </tbody>
</table>


