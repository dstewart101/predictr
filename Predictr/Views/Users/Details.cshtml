@model Predictr.ViewModels.VM_User

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2>@Model.FirstName @Model.Surname</h2>
    <h4>League Points: </h4>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Fixture
                </th>
                <th>
                    Prediction
                </th>
                <th>

                </th>
                <th>
                    Actual
                </th>

                <th>
                    Points
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Predictions)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fixture.Home) vs @Html.DisplayFor(modelItem => item.Fixture.Away)
                        (@Html.DisplayFor(modelItem => item.Fixture.FixtureDateTime))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeScore) -
                        @Html.DisplayFor(modelItem => item.AwayScore)
                    </td>
                    <td>
                        @if (item.Joker == true)
                        {
                            @: <span class="joker">J</span>
                        }
                        @if (item.DoubleUp == true)
                        {
                            @: <span class="x2">x2</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fixture.HomeScore) -
                        @Html.DisplayFor(modelItem => item.Fixture.AwayScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Points)
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
