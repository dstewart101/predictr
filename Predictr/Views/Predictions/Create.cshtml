@model Predictr.ViewModels.VM_CreatePrediction

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Prediction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label">@Html.DisplayFor(model => model.HomeTeam)</label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label">@Html.DisplayFor(model => model.AwayTeam)</label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="FixtureId" value=@Html.DisplayFor(model => model.FixtureId) class="form-control" type="hidden" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="MyPredictr" asp-action="Index">Back to MyPredictr</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
